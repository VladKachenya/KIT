<UserControl x:Class="BISC.Modules.Device.Presentation.Views.DeviceDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BISC.Modules.Device.Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="10" Text="{Binding DeviceName}"></TextBlock>
       <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock Margin="10,20,10,10" Text="IP"></TextBlock>
            <TextBox Margin="5" Width="80" IsReadOnly="True" Text="{Binding DeviceIp}">
            </TextBox>
       </StackPanel>

    </Grid>
</UserControl>
