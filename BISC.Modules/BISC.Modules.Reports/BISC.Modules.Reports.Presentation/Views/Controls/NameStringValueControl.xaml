<UserControl x:Class="BISC.Modules.Reports.Presentation.Views.Controls.NameStringValueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BISC.Modules.Reports.Presentation.Views.Controls"
             mc:Ignorable="d"
             x:Name="RootElement"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="0, 0, 0, 1" BorderBrush="#FF5B5D5B" >
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="NameTextBox" Margin="5" HorizontalAlignment="Center"/>
                <TextBox x:Name="ValueTextBox" Margin="5, 0" TextAlignment="Center" MinWidth="10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
