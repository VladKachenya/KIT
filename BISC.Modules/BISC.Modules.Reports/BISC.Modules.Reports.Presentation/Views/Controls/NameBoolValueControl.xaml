<UserControl x:Class="BISC.Modules.Reports.Presentation.Views.Controls.NameBoolValueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BISC.Modules.Reports.Presentation.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="0, 0, 0, 1" BorderBrush="#FF5B5D5B">
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="VelueCheckBox" 
                          VerticalAlignment="Center" Opacity="0.8" IsEnabled="False"/>
                <TextBlock x:Name="NameTextBox" Margin="2"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
