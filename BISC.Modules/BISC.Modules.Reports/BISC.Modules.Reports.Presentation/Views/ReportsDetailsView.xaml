<UserControl x:Class="BISC.Modules.Reports.Presentation.Views.ReportsDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BISC.Modules.Reports.Presentation.Views"
             mc:Ignorable="d" 
             xmlns:localConverters="clr-namespace:BISC.Modules.Reports.Presentation.Converters"
             xmlns:reportElementsViewModels="clr-namespace:BISC.Modules.Reports.Presentation.ViewModels.ReportElementsViewModels"
             xmlns:controls="clr-namespace:BISC.Modules.Reports.Presentation.Views.Controls"
             xmlns:converters="clr-namespace:BISC.Presentation.BaseItems.Converters;assembly=BISC.Presentation.BaseItems"
             xmlns:ToolTipConstants="clr-namespace:BISC.Model.Global.Constants;assembly=BISC.Model.Global"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <localConverters:IntegerAndParametrToVisibleConverter x:Key="IntToVisConv"/>
        <converters:InverseConverter x:Key="inverseConverter"></converters:InverseConverter>
        <converters:IsNullToVisibilityConverter x:Key="IsNullToVisibilityConverter"></converters:IsNullToVisibilityConverter>
        <localConverters:BoolianToBufferidStringConverter x:Key="boolianToBufferidStringConverter"/>
    </UserControl.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="ListBox" ItemsSource="{Binding ReportControlViewModels}" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="reportElementsViewModels:ReportControlViewModel">
                    <Grid Background="Transparent" Margin="15,0">
                        <Grid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить" IsEnabled="{Binding IsDynamic}" 
                                          Command="{Binding DataContext.DeleteReportCommand, Source={x:Reference Name=ListBox}}" CommandParameter="{Binding .}">
                                </MenuItem>
                            </ContextMenu>
                        </Grid.ContextMenu>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <Border Margin="2" Background="{Binding TypeColorBrush}" >
                                <TextBlock Margin="4"  Text="{Binding ElementName}"/>
                            </Border>
                            <TextBlock Margin="6" Text="{Binding IsBuffered, Converter={StaticResource boolianToBufferidStringConverter}}"/>
                            <TextBlock Margin="6" Text="{Binding Name}"/>
                        </StackPanel>
                        <Label HorizontalAlignment="Center" Height="25" Width="25" 
                                       VerticalAlignment="Center" Grid.Column="1" Visibility="Hidden">
                            <Label.Content>
                                <ContentControl  ContentTemplate="{DynamicResource SaveIcon}"/>
                            </Label.Content>
                        </Label>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid  Grid.Column="1"  Visibility="{Binding Source={x:Reference Name=ListBox},Path=SelectedItem,Converter={StaticResource IsNullToVisibilityConverter}}" DataContext="{Binding Source={x:Reference Name=ListBox},Path=SelectedItem}" >
                <Border x:Name="Border" 
                    BorderThickness="1 0 0 1"
                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                    <StackPanel Orientation="Vertical" Margin="50, 0, 50, 10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                        <!--<TextBlock Margin="6" FontSize="18" Text="{Binding IsBuffered, Converter={StaticResource boolianToBufferidStringConverter}}"/>-->
                        <Border ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_Name}">
                            <TextBox Margin="6" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontSize="18" 
                                     FontWeight="Bold" Foreground="Black" IsEnabled="{Binding IsDynamic}" MaxWidth="200"
                                     TextAlignment="Center"/>
                        </Border>
                        <Border ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_rptId_Description}">
                            <TextBox Margin="6" Text="{Binding ReportID}" FontSize="18" FontWeight="Bold" Foreground="Black" 
                                     IsEnabled="False" TextAlignment="Center"/>
                        </Border>
                    </StackPanel>
                    <Border BorderThickness="0, 0, 0, 1" BorderBrush="#FF5B5D5B"
                        ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_Dataset_Description}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Data set name:" Margin="5" HorizontalAlignment="Center"/>
                            <ComboBox Margin="2" SelectedItem="{Binding SelectidDataSetName, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding AvailableDatasets}"></ComboBox>
                        </StackPanel>
                    </Border>

                    <controls:NameStringValueControl TextOfName="Report enable max:"
                        ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_rptEnabledMax_Description}"
                        TextOfValue ="{Binding ReportEnabledViewModel.Max, UpdateSourceTrigger=PropertyChanged}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderThickness="0, 0, 2, 0">
                                <StackPanel Orientation="Vertical" >
                                    <TextBlock Text="Oprional filds" TextAlignment="Center" Margin="0, 3, 0, 0"/>
                                    <controls:NameBoolValueControl TextOfName="Sequence number"  
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_seqNum_Description}"                       
                                        IsChecked="{Binding OprionalFildsViewModel.SequenceNumber}"/>
                                    <controls:NameBoolValueControl TextOfName="Report time stamp" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_timeStamp_Description}"                       
                                        IsChecked="{Binding OprionalFildsViewModel.ReportTimeStamp}"/>
                                    <controls:NameBoolValueControl TextOfName="Reason for inclusion" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_reasonCode_Description}"                       
                                        IsChecked="{Binding OprionalFildsViewModel.ReasonForInclusion}"/>
                                    <controls:NameBoolValueControl TextOfName="Data set name" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_isDataset_Description}"                       
                                        IsChecked="{Binding OprionalFildsViewModel.DataSetName}"/>
                                    <controls:NameBoolValueControl TextOfName="Data reference" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_dataRef_Description}"                       
                                        IsChecked="{Binding OprionalFildsViewModel.DataReference}"/>
                                    <controls:NameBoolValueControl TextOfName="Buffer overflow" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_bufOvfl_Description}"                       
                                        IsChecked="{Binding OprionalFildsViewModel.BufferOverflow}"/>
                                    <controls:NameBoolValueControl TextOfName="Entru ID" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_entryId_Description}"                
                                        IsChecked="{Binding OprionalFildsViewModel.EntruID}"/>
                                    <controls:NameBoolValueControl TextOfName="Config revision" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_configRef_Description}"                
                                        IsChecked="{Binding OprionalFildsViewModel.ConfigRevision}"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="1" BorderThickness="2, 0, 0, 0">
                                <StackPanel Orientation="Vertical" >
                                    <TextBlock Text="Trigger options" TextAlignment="Center" Margin="0, 3, 0, 0"/>
                                    <controls:NameBoolValueControl TextOfName="Data change" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_dchg_Description}"                
                                        IsChecked="{Binding TriggerOptionsViewModel.DataChange}"/>
                                    <controls:NameBoolValueControl TextOfName="Quality change" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_qchg_Description}"                
                                        IsChecked="{Binding TriggerOptionsViewModel.QualityChange}"/>
                                    <controls:NameBoolValueControl TextOfName="Data update" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_dupd_Description}"                
                                        IsChecked="{Binding TriggerOptionsViewModel.DataUpdate}"/>
                                    <controls:NameBoolValueControl TextOfName="Integrity" 
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_cyclic_Description}"                
                                        IsChecked="{Binding TriggerOptionsViewModel.Integrity}"/>
                                    <controls:NameBoolValueControl TextOfName="Perfom genetral interrogation"
                                    ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_gi_Description}"                
                                        IsChecked="{Binding TriggerOptionsViewModel.GenetralInterrogation}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <controls:NameStringValueControl TextOfName="Integruty period:" 
                        ToolTip="{x:Static ToolTipConstants:StringConstants.ReportControl_intgPd_Description}"                
                                TextOfValue ="{Binding IntegrutyPeriod, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
</UserControl>
