<UserControl x:Class="BISC.Modules.DataSets.Presentation.Views.DataSetsDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BISC.Modules.DataSets.Presentation.Views"
             xmlns:converters="clr-namespace:BISC.Presentation.BaseItems.Converters;assembly=BISC.Presentation.BaseItems"
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="DataSetsDitailsViewModel">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"></BooleanToVisibilityConverter>
        <Style x:Key ="IsEditebleStyle" TargetType="ContentControl">
            <Style.Triggers >
                <DataTrigger Binding="{Binding IsEditeble}" Value="true">
                    <Setter Property="ContentTemplate" Value="{DynamicResource BookmarkPlusIcon}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsEditeble}" Value="false">
                    <Setter Property="ContentTemplate" Value="{DynamicResource PencilLockIcon}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Command="{Binding SaveСhangesCommand}" Visibility="Visible" Margin="10,5" Height="20" Width="20"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Сохранить изменения в проект">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource SaveIcon}"/>
                    </Button.Content>
                </Button>
                <Button  Command="{Binding AddNewDataSetCommand}" Visibility="Visible" Margin="10,5" Height="20" Width="20"
                         Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Добавить DataSet">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource PlusOutlineIcon}"/>
                    </Button.Content>
                </Button>
                <!--<Button  Margin="10,5" Height="20" Width="20"  Visibility="Visible"
                        
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="">
                    
                </Button>-->
                <Button  Margin="10,5" Height="20" Width="20" Visibility="Collapsed"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Записать в устройство">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource ChevronDoubleUpIcon}"/>
                    </Button.Content>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="10, 0">
                <Button Command="{Binding RollUpAllExpandersCommand}" Margin="10,5" Height="20" Width="20"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Свернуть всё">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource ChevronDoubleUpIcon}"/>
                    </Button.Content>
                </Button>
                <Button Command="{Binding DeployAllExpandersCommand}" Margin="10,5" Height="20" Width="20"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Развернуть всё">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource ChevronDoubleDownIcon}"/>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="ExpanderItemsControl"
                ItemsSource="{Binding DataSets}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            x:Name="Border"
                            BorderThickness="1 0 0 1"
                            BorderBrush="{DynamicResource MaterialDesignDivider}">
                            <Grid Margin="0">
                                <Expander HorizontalAlignment="Stretch" IsExpanded="{Binding IsExpanded}">
                                    <Expander.Header >
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                <Border Margin="2" Background="{Binding TypeColorBrush}" >
                                                    <TextBlock Margin="4"  Text="{Binding ElementName}"/>
                                                </Border>
                                                <TextBlock VerticalAlignment="Center" Text="{Binding FullName}" Margin="4"/>
                                                <TextBox VerticalAlignment="Center" Text="{Binding Name}" Margin="0" 
                                                     IsEnabled="{Binding ElementName = EditToggleButton, Path= IsChecked}" />
                                            </StackPanel>
                                            <StackPanel  Grid.Column="1" Orientation="Horizontal">
                                                <Button Margin="5" Padding="3" Visibility="{Binding IsEditeble,Converter={StaticResource booleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.DeleteDataSetViewModelCommand,Source={x:Reference ExpanderItemsControl}}"
                                                            CommandParameter="{Binding .}"
                                                            IsEnabled="{Binding ElementName = EditToggleButton, Path= IsChecked}"
                                                            Style="{DynamicResource MaterialDesignRaisedButton}"
                                                            Width="20" Height="20"
                                                            Grid.Column="1">
                                                    <Button.Content>
                                                        <ContentControl ContentTemplate="{DynamicResource CloseIcon}"/>
                                                    </Button.Content>
                                                </Button>
                                                <ToggleButton x:Name="EditToggleButton" IsChecked="False" 
                                                      IsEnabled="{Binding IsEditeble}"
                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                      ToolTip="Разрешить редактирование датасета"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                    </Expander.Header>
                                    <Border BorderThickness="1" Background="#FFE0E0E0">
                                        <ListBox PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" Name="fcdaListBox"
                                            MinHeight="50"
                                            ItemsSource="{Binding FcdaViewModels}"  
                                            dd:DragDrop.IsDragSource="True" 
                                            dd:DragDrop.IsDropTarget="{Binding IsEditeble}"
                                            dd:DragDrop.DropHandler="{Binding .}">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate >
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="40, 0">
                                                            <Border Margin="2"  Background="{Binding TypeColorBrush}" >
                                                                <TextBlock Margin="3" Text="{Binding ElementName}"/>
                                                            </Border>
                                                            <TextBlock Margin="3" Text="{Binding FullName}"/>
                                                        </StackPanel>
                                                        <Button Margin="2" Padding="3" Visibility="{Binding IsEditeble,Converter={StaticResource booleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.DeleteFcdaCommand,Source={x:Reference fcdaListBox}}"
                                                            CommandParameter="{Binding .}"
                                                            Style="{DynamicResource MaterialDesignRaisedButton}"
                                                            Width="20" Height="20"
                                                            Grid.Column="1">
                                                            <Button.Content>
                                                                <ContentControl ContentTemplate="{DynamicResource CloseIcon}"/>
                                                            </Button.Content>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ListBox>
                                    </Border>
                                </Expander>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
