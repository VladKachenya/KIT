<UserControl x:Class="BISC.Modules.DataSets.Presentation.Views.DataSetsDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BISC.Modules.DataSets.Presentation.Views"
             xmlns:converters="clr-namespace:BISC.Presentation.BaseItems.Converters;assembly=BISC.Presentation.BaseItems"
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
             xmlns:viewModels="clr-namespace:BISC.Modules.DataSets.Presentation.ViewModels"
             xmlns:views="clr-namespace:BISC.Presentation.BaseItems.Views;assembly=BISC.Presentation.BaseItems"
             xmlns:behaviors="clr-namespace:BISC.Presentation.BaseItems.Behaviors;assembly=BISC.Presentation.BaseItems"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="DataSetsDitailsViewModel">
    <UserControl.Resources>
        <converters:InverseConverter x:Key="inverseConverter"></converters:InverseConverter>
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"></BooleanToVisibilityConverter>
        <converters:BoolToVisConverter Invert="True" x:Key="boolToInVisConverter"></converters:BoolToVisConverter>

        <Style x:Key ="IsEditebleStyle" TargetType="ContentControl">
            <Style.Triggers >
                <DataTrigger Binding="{Binding IsEditeble}" Value="true">
                    <Setter Property="ContentTemplate" Value="{DynamicResource BookmarkPlusIcon}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsEditeble}" Value="false">
                    <Setter Property="ContentTemplate" Value="{DynamicResource PencilLockIcon}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="ColumnDefinition">

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsModelShowed}" Value="True" >
                                <Setter Property="Width" Value="*"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsModelShowed}" Value="False" >
                                <Setter Property="Width" Value="0"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <views:DynamicRegion Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" RegionKey="{Binding ModelRegionKey}" Visibility="{Binding IsModelShowed,Converter={StaticResource booleanToVisibilityConverter}}"></views:DynamicRegion>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <!--<Button Command="{Binding SaveСhangesCommand}" Visibility="Visible" Margin="10,5" Height="20" Width="20"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Сохранить изменения в проект">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource SaveIcon}"/>
                    </Button.Content>
                </Button>-->
                <Button  Command="{Binding ExpandModelCommand}" Visibility="{Binding IsModelShowed,Converter={StaticResource boolToInVisConverter}}" Margin="10,5" Height="20" Width="20"
                         Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                         ToolTip="Развернуть модель">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource ArrowExpandRightIcon}"/>
                    </Button.Content>
                </Button>
                <Button  Command="{Binding CollapseModelCommand}" Visibility="{Binding IsModelShowed,Converter={StaticResource booleanToVisibilityConverter}}" Margin="10,5" Height="20" Width="20" 
                         Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                         ToolTip="Свернуть модель">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource ArrowCollapseLeftIcon}"/>
                    </Button.Content>
                </Button>
                <!--<Button  Command="{Binding AddNewDataSetCommand}" Visibility="Visible" Margin="10,5" Height="20" Width="20"
                         Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Добавить DataSet">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource PlusOutlineIcon}"/>
                    </Button.Content>
                </Button>-->
            


                <!--<Button  Margin="10,5" Height="20" Width="20"  Visibility="Visible"
                        
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="">
                    
                </Button>-->
                <Button  Margin="10,5" Height="20" Width="20" Visibility="Collapsed"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Записать в устройство">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource ChevronDoubleUpIcon}"/>
                    </Button.Content>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="10, 0">
                <Button Command="{Binding RollUpAllExpandersCommand}" Margin="10,5" Height="20" Width="20"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Свернуть всё">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource ChevronDoubleUpIcon}"/>
                    </Button.Content>
                </Button>
                <Button Command="{Binding DeployAllExpandersCommand}" Margin="10,5" Height="20" Width="20"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        ToolTip="Развернуть всё">
                    <Button.Content>
                        <ContentControl ContentTemplate="{DynamicResource ChevronDoubleDownIcon}"/>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
        <ScrollViewer Grid.Column="1" Grid.Row="1">
            <ItemsControl x:Name="ExpanderItemsControl"
                ItemsSource="{Binding DataSets}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="viewModels:DataSetViewModel">
                        <Border 
                            x:Name="Border"
                            BorderThickness="1 0 0 1"
                            BorderBrush="{DynamicResource MaterialDesignDivider}">
                            <Grid Margin="0">
                                <Expander HorizontalAlignment="Stretch" IsExpanded="{Binding IsExpanded}">
                                    <Expander.Header >
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ContentControl Content="{Binding .}">

                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">

                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                <Setter Property="ContentTemplate">
                                                                    <Setter.Value>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                                                <Border Margin="2" Background="{Binding TypeColorBrush}" >
                                                                                    <TextBlock Margin="4"  Text="{Binding ElementName}"/>
                                                                                </Border>
                                                                                <ComboBox VerticalAlignment="Center" Margin="4,0,0,4" SelectedItem="{Binding SelectedParentLd}" ItemsSource="{Binding ParentLdList}" MinWidth="100"></ComboBox>
                                                                                <ComboBox VerticalAlignment="Center" Margin="4,0,0,4" SelectedItem="{Binding SelectedParentLn}" ItemsSource="{Binding ParentLnList}" MinWidth="100"></ComboBox>
                                                                                <TextBox VerticalAlignment="Center" Margin="4,0,0,4"  Text="{Binding EditableNamePart,UpdateSourceTrigger=PropertyChanged}" />
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                                                <Setter Property="ContentTemplate">
                                                                    <Setter.Value>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                                                <Border Margin="2" Background="{Binding TypeColorBrush}" >
                                                                                    <TextBlock Margin="4"  Text="{Binding ElementName}"/>
                                                                                </Border>
                                                                                <TextBlock VerticalAlignment="Center" Text="{Binding SelectedParentLd}"></TextBlock>
                                                                                <TextBlock VerticalAlignment="Center" Text="."></TextBlock>
                                                                                <TextBlock VerticalAlignment="Center"  Text="{Binding SelectedParentLn}"></TextBlock>
                                                                                <TextBlock VerticalAlignment="Center" Text="."></TextBlock>
                                                                                <TextBlock VerticalAlignment="Center" Text="{Binding EditableNamePart,UpdateSourceTrigger=PropertyChanged}"  />
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>

                                            <StackPanel  Grid.Column="1" Orientation="Horizontal">
                                                <Button Margin="5" Padding="3" Visibility="{Binding IsEditeble,Converter={StaticResource booleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.DeleteDataSetViewModelCommand,Source={x:Reference ExpanderItemsControl}}"
                                                            CommandParameter="{Binding .}"
                                                            IsEnabled="{Binding ElementName = EditToggleButton, Path= IsChecked}"
                                                            Style="{DynamicResource MaterialDesignRaisedButton}"
                                                            Width="20" Height="20"
                                                            Grid.Column="1">
                                                    <Button.Content>
                                                        <ContentControl ContentTemplate="{DynamicResource CloseIcon}"/>
                                                    </Button.Content>
                                                </Button>
                                                <ToggleButton x:Name="EditToggleButton" IsChecked="{Binding IsEditing}" 
                                                      IsEnabled="{Binding IsEditeble}"
                                                           Visibility="{Binding IsEditeble,Converter={StaticResource booleanToVisibilityConverter}}"   
                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                      ToolTip="Разрешить редактирование датасета"/>
                                            </StackPanel>
                                        </Grid>

                                    </Expander.Header>
                                    <Border BorderThickness="1" Background="#FFE0E0E0">
                                        <ListBox Name="fcdaListBox"
                                            MinHeight="50"
                                            ItemsSource="{Binding FcdaViewModels}"  
                                            dd:DragDrop.IsDragSource="True" 
                                            dd:DragDrop.IsDropTarget="{Binding IsEditeble}"
                                            dd:DragDrop.DropHandler="{Binding .}">
                                            <i:Interaction.Behaviors>
                                                <behaviors:ScrollableListBoxBehavior />
                                            </i:Interaction.Behaviors>
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate >
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="40, 0">
                                                            <Border Margin="2"  Background="{Binding TypeColorBrush}" >
                                                                <TextBlock Margin="3" Text="{Binding ElementName}"/>
                                                            </Border>
                                                            <TextBlock Margin="3" Text="{Binding FullName}"/>
                                                        </StackPanel>
                                                        <Button Margin="2" Padding="3" Visibility="{Binding IsEditeble,Converter={StaticResource booleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.DeleteFcdaCommand,Source={x:Reference fcdaListBox}}"
                                                            CommandParameter="{Binding .}"
                                                            Style="{DynamicResource MaterialDesignRaisedButton}"
                                                            Width="20" Height="20"
                                                            Grid.Column="1">
                                                            <Button.Content>
                                                                <ContentControl ContentTemplate="{DynamicResource CloseIcon}"/>
                                                            </Button.Content>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ListBox>
                                    </Border>
                                </Expander>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
