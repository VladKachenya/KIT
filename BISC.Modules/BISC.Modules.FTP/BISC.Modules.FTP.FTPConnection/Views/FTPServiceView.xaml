<UserControl x:Class="BISC.Modules.FTP.FTPConnection.Views.FTPServiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BISC.Modules.FTP.FTPConnection.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:commands="clr-namespace:BISC.Presentation.BaseItems.Commands;assembly=BISC.Presentation.BaseItems"
             xmlns:view="clr-namespace:BISC.Modules.Connection.Presentation.View;assembly=BISC.Modules.Connection.Presentation"
             xmlns:controls="clr-namespace:BISC.Presentation.BaseItems.Controls;assembly=BISC.Presentation.BaseItems"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="IsConnectStyle" TargetType="Label">
            <Style.Triggers>
                <DataTrigger Binding="{Binding }" Value="True">
                    <Setter Property="Foreground" Value="LightGreen" />
                </DataTrigger>
                <DataTrigger Binding="{Binding }" Value="False">
                    <Setter Property="Foreground" Value="#FFF16565" />
                </DataTrigger>
                <DataTrigger Binding="{Binding }" Value="{x:Null}">
                    <Setter Property="Foreground" Value="#FFD1D113" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
                <view:IpAddressView DataContext="{Binding FtpIpAddressViewModel}"
                                    Margin="10"/>
            </StackPanel>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="Логин"
                       FontSize="18" Margin="5"
                       TextAlignment="Center"/>
            <TextBox Grid.Column="1" Grid.Row="1"
                     Text="{Binding FtpPassword}" 
                     Width="200"
                     FontSize="18"
                     Margin="5"
                     TextAlignment="Center"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Text="Пароль"
                       FontSize="18"
                       Margin="5"
                       TextAlignment="Center"/>
            <TextBox Grid.Column="1" Grid.Row="2"
                     Text ="{Binding FtpLogin}"
                     Width="200"
                     FontSize="18"
                     Margin="5"
                     TextAlignment="Center"/>
            
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="3"
                   Height="10"
                   FontSize="18"
                   Style="{DynamicResource IsConnectStyle}">
                    <Label.ToolTip>
                        <ToolTip Content="{Binding ForToolTip}"></ToolTip>
                    </Label.ToolTip>
                    <Label.Content>
                        <ContentControl  ContentTemplate="{DynamicResource LightbulbOn}"/>
                    </Label.Content>
                </Label>
            <Button Content="Подключится" 
                    Margin="10"
                    Grid.Column="1"
                    Grid.Row="3"
                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                    Command="{Binding ConnectToDeviceCommand}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
        <Button Grid.Row="3" 
                Grid.ColumnSpan="2"
                Content="Закрыть окно"
                Margin="0, 5, 0, 0"
                Command="{x:Static commands:DialogCommands.CloseDialogCommand}">
        </Button>
    </Grid>
</UserControl>
