<UserControl x:Class="BISC.Modules.FTP.FTPConnection.Views.FTPServiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BISC.Modules.FTP.FTPConnection.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:commands="clr-namespace:BISC.Presentation.BaseItems.Commands;assembly=BISC.Presentation.BaseItems"
             xmlns:view="clr-namespace:BISC.Modules.Connection.Presentation.View;assembly=BISC.Modules.Connection.Presentation"
             xmlns:controls="clr-namespace:BISC.Presentation.BaseItems.Controls;assembly=BISC.Presentation.BaseItems"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="IsConnectStyle" TargetType="Label">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFtpConnected}" Value="True">
                    <Setter Property="Foreground" Value="LightGreen" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFtpConnected}" Value="False">
                    <Setter Property="Foreground" Value="#FFF16565" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFtpConnected}" Value="{x:Null}">
                    <Setter Property="Foreground" Value="#FFD1D113" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
                <view:IpAddressView DataContext="{Binding FtpIpAddressViewModel}"
                                    Margin="10"/>
            </StackPanel>

            <TextBlock Grid.Column="1" Grid.Row="1" Text="Логин"
                       FontSize="16" Margin="5"
                       TextAlignment="Center"/>
            <TextBox Grid.Column="0" Grid.Row="1"
                     Text="{Binding FtpLogin}" 
                     FontSize="16"
                     Margin="5"
                     MaxWidth="200"
                     TextAlignment="Center"/>
            
            <TextBlock  Text="Пароль"
                       Grid.Column="1" Grid.Row="2"
                       FontSize="16"
                       Margin="5"
                       TextAlignment="Center"/>   
            <StackPanel Grid.Column="0" Grid.Row="2">
                <TextBox 
                    Text="{Binding FtpPassword}"
                    Name="PasswordBox"
                    MaxWidth="200"
                    FontSize="16"
                    TextAlignment="Center"
                    Margin="5" />
            </StackPanel>
            
            <!---->
            <Button Content="Подключится" 
                    Margin="10"
                    Grid.Column="0"
                    Grid.Row="3"
                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                    Command="{Binding ConnectToDeviceCommand}"/>
            <Button Content="Перезагрузить"
                    Margin="10"
                    Grid.Column="1"
                    Grid.Row="3"
                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                    Command="{Binding ResetDeviceCommand}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Border 
              Height="300"
              MaxWidth="400"
              Background="{DynamicResource MaterialDesignBackground}">
                <GroupBox
                    Header="Список действий"
                    Style="{DynamicResource MaterialDesignGroupBox}"
                    Margin="5"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True">
                    <ScrollViewer VerticalScrollBarVisibility ="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="noteList" 
                             ItemsSource="{Binding FTPActionMessageList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Label HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                        <Label.Content>
                                            <ContentControl  ContentTemplate="{DynamicResource LightbulbOn}"/>
                                        </Label.Content>
                                    </Label>        
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding CreationDateTime}"
                                            Height="Auto"/>
                                        <TextBlock 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding Message}"
                                            Height="Auto"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Border>

        </Grid>
        <Button Grid.Row="3" 
                Grid.ColumnSpan="2"
                Content="Закрыть окно"
                Margin="5"
                Command="{x:Static commands:DialogCommands.CloseDialogCommand}">
        </Button>
    </Grid>
</UserControl>
